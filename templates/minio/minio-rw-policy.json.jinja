{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:GetBucketLocation",
        "s3:ListBucket"
      ],
      "Resource": "arn:aws:s3:::k8s-pages",
      "Condition": {
        "StringLike": {
          "s3:prefix": [
            "{{name}}",
            "{{name}}-dev"
          ]
        }
      }
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:AbortMultipartUpload",
        "s3:DeleteObject",
        "s3:GetObject",
        "s3:ListMultipartUploadParts"
      ],
      "Resource": [
        "arn:aws:s3:::k8s-pages/{{name}}/*",
        "arn:aws:s3:::k8s-pages/{{name}}-dev/*",
        "arn:aws:s3:::{{name}}/*",
        "arn:aws:s3:::{{name}}-dev/*"
      ]
    }
  ]
}

